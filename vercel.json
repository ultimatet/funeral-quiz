{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(question|user|admin|quiz|profile|test)/(.*)",
      "dest": "/backend/app.js"
    },
    {
      "src": "/(question|user|admin|quiz|profile|test)",
      "dest": "/backend/app.js"
    },
    {
      "src": "/",
      "dest": "/backend/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}